[Unit]
Description=Raspberry Pi Info Web API
After=multi-user.target
Conflicts=getty@tty1.service

[Service]
Type=simple
WorkingDirectory=/usr/local/sbin/rpi-monitor-api
ExecStart=/usr/bin/python3 /usr/local/sbin/rpi-monitor-api/rpimonitorapi/run.py
StandardInput=tty-force

[Install]
WantedBy=multi-user.target
